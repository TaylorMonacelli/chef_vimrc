" vim-pathogen
execute pathogen#infect("<%= node['chef_vimrc'][@whichvim]['plugindir'] %>/{}")

" vim-plug
call plug#begin("<%= node['chef_vimrc'][@whichvim]['plugindir'] %>")
Plug 'junegunn/fzf', { 'dir': '<%= node['chef_vimrc']['fzfdir'] %>', 'do': './install --all' }
Plug 'junegunn/fzf.vim'
call plug#end()
